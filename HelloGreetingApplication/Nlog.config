<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <!-- Log to file -->
        <target name="logfile" xsi:type="File" fileName="logs/app.log" layout="${longdate} ${level} ${message} ${exception}" />
        <!-- Log to console -->
        <target name="logconsole" xsi:type="Console" layout="${longdate} ${level} ${message} ${exception}" />
    </targets>

    <rules>
        <!-- Log everything with info or higher -->
        <logger name="*" minlevel="Info" writeTo="logfile,logconsole" />
    </rules>
</nlog>
